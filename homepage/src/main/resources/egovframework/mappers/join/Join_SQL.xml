	<insert id="insertJoin">
		INSERT INTO lettnemplyrinfo(
			ESNTL_ID,
			EMPLYR_ID,
			USER_NM,
			PASSWORD,
			PASSWORD_HINT,
			PASSWORD_CNSR,
			EMPLYR_STTUS_CODE,
			SBSCRB_DE
		) values(
			#{esntlId},
			#{emplyrId},
			#{userNm},
			#{password},
			#{passwordHint},
			#{passwordCnsr},
			'P',
			NOW()
		)		
	</insert>
	
	<select id="duplicateCheck" resultType="java.lang.Integer">
		SELECT COUNT(*) CNT
		FROM lettnemplyrinfo
		WHERE EMPLYR_ID = #{emplyrId}
	</select>
	
