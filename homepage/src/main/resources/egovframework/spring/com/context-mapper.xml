<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

<!-- mapper 세팅 -->
<bean id="sqlSession"
	class="org.mybatis.spring.SqlSessionFactoryBean">
	<property name="dataSource" ref="dataSource" />
	<property name="configLocation"
		value="classpath:/egovframework/mappers/config/sql-mapper-config.xml" /> <!-- config를 이 경로에 저장하겠다는 의미 -->
	<property name="mapperLocations">
		<list>
			<value>classpath:/egovframework/mappers/**/*_SQL.xml</value> <!-- mapper 파일 규칙! -->
		</list>
	</property>
</bean>

<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
	<property name="basePackage" value="egovframework.**.service.impl" />
</bean>

</beans>